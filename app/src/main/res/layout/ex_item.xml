<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/shadow_background_1">


    <ImageView
        android:id="@+id/ex_image_training"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:adjustViewBounds="true"
        android:background="#FEFEFE"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_sport4" />

    <TextView
        android:id="@+id/ex_name_item_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/ex_image_training"
        android:text="Name of exercise"
        android:fontFamily="@font/roboto_medium"
        android:textSize="15.5sp"
        android:textColor="#000000"/>


</RelativeLayout>