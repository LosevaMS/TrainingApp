<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="13dp"
    android:layout_marginEnd="13dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="7dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/program_name_item"
        android:layout_width="379dp"
        android:layout_height="139dp"
        android:background="@drawable/gym1"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:text="Program name"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:textStyle="bold"
        android:transformPivotX="50dp"
        android:typeface="normal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/item_rectangle"
        android:layout_width="379dp"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:background="@drawable/rectangle_for_list"/>

        <TextView
            android:id="@+id/delete_item"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/item_rectangle"
            android:layout_alignTop="@id/item_rectangle"
            android:layout_alignBottom="@id/item_rectangle"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/delete" />

        <TextView
            android:id="@+id/edit_item"
            android:layout_width="19dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/item_rectangle"
            android:layout_alignTop="@id/item_rectangle"
            android:layout_alignBottom="@id/item_rectangle"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/edit" />
        <TextView
            android:id="@+id/play_item"
            android:layout_width="24dp"
            android:layout_height="34dp"
            android:layout_alignRight="@id/item_rectangle"
            android:layout_alignTop="@id/item_rectangle"
            android:layout_alignBottom="@id/item_rectangle"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_play" />
    </RelativeLayout>




</LinearLayout>