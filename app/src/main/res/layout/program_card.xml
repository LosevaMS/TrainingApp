<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginStart="11dp"
    android:layout_marginEnd="11dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@drawable/shadow_background_1">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:cardBackgroundColor="#FFFFFF"
        android:elevation="8dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="186dp">

            <ImageView
                android:id="@+id/gym"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                android:background="@drawable/gym1" />

            <TextView
                android:id="@+id/program_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/gym"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:paddingLeft="14dp"
                android:paddingBottom="5dp"
                android:text="Program name"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:transformPivotX="50dp"
                android:typeface="normal" />

            <ImageView
                android:id="@+id/delete_item"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/gym"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/delete" />

            <ImageView
                android:id="@+id/edit_item"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@+id/gym"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:layout_toEndOf="@+id/delete_item"
                android:layout_toRightOf="@+id/delete_item"
                android:background="@drawable/edit" />

            <ImageView
                android:id="@+id/play_item"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/gym"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/ic_play" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>