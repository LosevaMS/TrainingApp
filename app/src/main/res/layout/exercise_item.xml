<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="110dp"
android:layout_marginTop="6dp"
android:layout_marginBottom="6dp"
android:background="@drawable/shadow_background_1">


<ImageView
    android:id="@+id/ex_image"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_alignParentStart="true"
    android:layout_marginStart="10dp"
    android:layout_marginTop="9dp"
    android:adjustViewBounds="true"
    android:background="#FEFEFE"
    android:scaleType="fitCenter"/>

<TextView
    android:id="@+id/exercise_name_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="20dp"
    android:layout_toEndOf="@+id/ex_image"
    android:layout_toStartOf="@id/delete_btn_layout"
    android:text="Name of exercise"
    android:fontFamily="@font/roboto_medium"
    android:textSize="15.5sp"
    android:textColor="#000000"/>


<LinearLayout
    android:id="@+id/delete_btn_layout"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="37dp"
    android:layout_marginEnd="4dp">

    <Button
        android:id="@+id/delete_ex_item"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8.5dp"
        android:layout_gravity="center"
        android:background="@drawable/delete" />
</LinearLayout>


</RelativeLayout>