<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название тренировки"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="12sp" />

    <EditText
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/exercise_title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/edit_exercise_name"
        />
    <TextView
        android:id="@+id/exercises_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список упражнений"
        android:layout_below="@id/edit_exercise_name"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textSize="12sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview2"
        android:layout_width="407dp"
        android:layout_height="600dp"
        android:layout_below="@id/exercises_list"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp" />
    <Button
        android:id="@+id/add_exercise_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/add_1"
        android:translationX="300dp"
        android:translationY="500dp"/>
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ok_btn"
        android:translationX="230dp"
        android:translationY="500dp"/>

</RelativeLayout>