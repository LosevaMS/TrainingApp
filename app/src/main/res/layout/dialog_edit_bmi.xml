<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/weight_text_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Вес"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_weight_bmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weight_text_bmi"
        android:layout_marginTop="10dp"
        android:hint="0.0 кг"
        android:inputType="numberDecimal"
        android:theme="@style/EditTextTheme"
        android:background="@drawable/edit_text_style2"/>

    <TextView
        android:id="@+id/count_text_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@id/input_weight_bmi"
        android:text="Рост"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_count_bmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/count_text_bmi"
        android:layout_marginTop="10dp"
        android:hint="0 см"
        android:inputType="number|numberDecimal"
        android:theme="@style/EditTextTheme"
        android:background="@drawable/edit_text_style2" />


</RelativeLayout>